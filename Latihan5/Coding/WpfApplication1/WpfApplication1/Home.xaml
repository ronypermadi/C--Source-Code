<Window x:Class="WpfApplication1.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Home" Height="300" Width="300">
    <StackPanel Background="#FFF75C5C">
        <Canvas Height="250" Background="White" Margin="10">
            <Button x:Name="button" Content="Logout" Background="#FFF75C5C" Height="26" Canvas.Left="213" Canvas.Top="10" Foreground="White" FontWeight="Bold" Width="51" Click="button_Click"/>
            <Label x:Name="label" Content="Selamat Datang" Canvas.Left="51" Canvas.Top="36" Height="45" Width="162" FontSize="20" FontWeight="Bold"/>
            <Image x:Name="user_default_png" Height="103" Canvas.Left="72" Source="user_default.png" Stretch="Fill" Canvas.Top="86" Width="130"/>
        </Canvas>

    </StackPanel>
</Window>
