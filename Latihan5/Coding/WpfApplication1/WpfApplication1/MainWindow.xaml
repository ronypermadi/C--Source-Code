<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="LoginForm" Height="350" Width="525" Background="#FFF75C5C">
    <StackPanel>
        <Label x:Name="lbllogin" Content="Login" Foreground="White" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Canvas Height="250" Background="White" Margin="10">
            <Image x:Name="user_default_png" Height="90" Canvas.Left="194" Source="user_default.png" Stretch="Fill" Width="103"/>
            <TextBox x:Name="txtUsername" Height="23" Canvas.Left="101" Text="Username" TextWrapping="Wrap" Canvas.Top="103" Width="289"/>
            <TextBox x:Name="txtPassword" Canvas.Left="101" Canvas.Top="149" Text="Password" TextWrapping="Wrap" Width="289" Height="23" />
            <Button x:Name="btnlogin" Content="Login" Canvas.Left="205" Canvas.Top="203" Width="75" FontWeight="Bold" Click="btnlogin_Click" Background="#FFF75C5C" Foreground="White"/>

        </Canvas>
    </StackPanel>
</Window>
